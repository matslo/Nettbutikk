@{
    ViewBag.Title = "Registrer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Nettbutikken.Models.Konto.Registrer
<h2>Registrer</h2>

<p class="text-danger">
    Passord må være minimum @Membership.MinRequiredPasswordLength tegn.
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/passordValidator.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Brukeren ble ikke oprettet. Prøv igjen", new { @class = "text-danger" })
    <div>
        <fieldset>
            <legend>Opprett konto</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.Brukernavn)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Brukernavn)
                @Html.ValidationMessageFor(m => m.Brukernavn, "", new { @class = "text-danger" })
            </div>
                       
            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Passord)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Passord, new { @id = "passord" })
                @Html.ValidationMessageFor(m => m.Passord, "", new { @class = "text-danger" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.BekreftPassord)
            </div>
            <div class="editor-field" onkeyup="checkPasswordMatch();return false;">
                @Html.PasswordFor(m => m.BekreftPassord, new { @id = "passord2" })
                @Html.ValidationMessageFor(m => m.BekreftPassord)
            </div>
            <div id="passordMatch"></div>
            <br />
            <p>
                <input type="submit" value="Registrer" class="btn btn-success" />
            </p>
        </fieldset>
    </div>
}
