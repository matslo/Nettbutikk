
@{
    ViewBag.Title = "Logginn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Nettbutikken.Models.Konto.LogInn
<h2>Logg inn</h2>

<p>
    Skriv inn ditt brukernavn og passord
</p>
<p>Er du ny? @Html.ActionLink("Registrer", "Registrer") deg her</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Html.ValidationSummary(true, "Ikke gyldig brukernavn og/ eller passord", new { @class = "text-danger" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
     <fieldset>
            <legend>Kontoinformasjon</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.Brukernavn)
            </div>
            <div class="input-group">
                <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                @Html.TextBoxFor(m => m.Brukernavn)
                @Html.ValidationMessageFor(m => m.Brukernavn,"", new { @class = "text-danger" })
            </div>
            

            <div class="editor-label">
                @Html.LabelFor(m => m.Passord)
            </div>
         <div class="input-group">
         <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                @Html.PasswordFor(m => m.Passord)
                @Html.ValidationMessageFor(m => m.Passord, "", new { @class = "text-danger" })
            </div>
                @if (ViewBag.Innlogget)
                {
                <p style="color:green">Logget inn</p>
                }
                else
                {
                    <p style="color:red">Ikke logget inn</p>
                }
                <input type="submit" value="Logg inn" class="btn btn-info"  />
             </fieldset>
    </div>
}