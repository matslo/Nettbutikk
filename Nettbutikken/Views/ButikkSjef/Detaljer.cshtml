@model Nettbutikken.Models.Vare

@{
    ViewBag.Title = "Detaljer";
}
<ul class="nav nav-pills">
    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Varer <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li role="presentation" class="active">@Html.ActionLink("Liste", "Index")</li>
            <li role="presentation">@Html.ActionLink("Legg til ny vare", "Opprett")</li>
            <li role="presentation">@Html.ActionLink("Legg til ny Kategori", "leggTilKat")</li>
        </ul>
    </li>
    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Kundebehandling <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li role="presentation">@Html.ActionLink("Kundeliste", "Liste", "Kundebehandling", new { area = "" }, new { @class = "" })</li>
            <li role="presentation">@Html.ActionLink("Registrer kunde", "Registrer", "Kundebehandling", new { area = "" }, new { @class = "" })</li>
            <li role="presentation">@Html.ActionLink("Se ordrer", "Liste", "OrdreBehandling", new { area = "" }, new { @class = "" })</li>
        </ul>
    </li>
    
</ul>
<div id="loggut">
    @Html.ActionLink("Logg ut", "Loggut", "Konto", null, new { @class = "btn btn-danger" })
</div>
<h2>Detaljer</h2>

<fieldset>
    <table class="table table-striped">
        <tr>
            <th>
                Kategori
            </th>

            <th>
                Vare
            </th>
            <th>
                Pris
            </th>
            <th>
                Bilde
            </th>
        </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Kategori.Navn)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Varenavn)
                </td>
                <td>
                   @Html.DisplayFor(model => model.Pris)
                </td>
                <td>
                    <img alt="@Model.Varenavn" src="@Model.Varebilde" height="80px" width="80px" />
                    
                </td>
           </tr>
        </table>
</fieldset>
<p>
    @Html.ActionLink("Endre", "Endre", new { id = Model.VareId }, new { @class = "btn btn-warning" }) 
    @Html.ActionLink("Tilbake til listen", "Index", null,new { @class = "btn btn-info" })
</p>
