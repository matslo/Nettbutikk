@model Nettbutikken.Models.Vare

@{
    ViewBag.Title = "Opprett";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<ul class="nav nav-pills">
    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Varer <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li role="presentation">@Html.ActionLink("Liste", "Index")</li>
            <li role="presentation"class="active">@Html.ActionLink("Legg til ny vare", "Opprett")</li>
            <li role="presentation">@Html.ActionLink("Legg til ny Kategori", "leggTilKat")</li>
        </ul>
    </li>
    <li role="presentation" class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Kundebehandling <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li role="presentation" >@Html.ActionLink("Kundeliste", "Liste", "Kundebehandling",new { area = "" }, new { @class = "" })</li>
            <li role="presentation">@Html.ActionLink("Registrer kunde", "Registrer", "Kundebehandling", new { area = "" }, new { @class = "" })</li>
            <li role="presentation">@Html.ActionLink("Se ordrer", "Liste", "OrdreBehandling", new { area = "" }, new { @class = "" })</li>
        </ul>
    </li>
    </ul>
<div id="loggut">
    @Html.ActionLink("Logg ut", "Loggut", "Konto", null, new { @class = "btn btn-danger" })
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <h3>Legg til vare</h3>

        <div class="editor-label">
            @Html.LabelFor(model => model.KategoriId, "Kategori")
        </div>
        <div class="editor-field">
            @Html.DropDownList("KategoriId", String.Empty)
            @Html.ValidationMessageFor(model => model.KategoriId)
        </div>


        <div class="editor-label">
            @Html.LabelFor(model => model.Varenavn)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Varenavn)
            @Html.ValidationMessageFor(model => model.Varenavn)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Pris)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Pris)
            @Html.ValidationMessageFor(model => model.Pris)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Varebilde)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Varebilde)
            @Html.ValidationMessageFor(model => model.Varebilde)
        </div>
        <br />
        <p>
            <input type="submit" value="Lagre" class="btn btn-success" />
        </p>
    </fieldset>
}


